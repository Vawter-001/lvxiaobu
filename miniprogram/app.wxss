page{
  background-color: #171824;
  color: white;
  font-size: 28rpx;
  width: 100%;
  height: 100%;
}

image,
text,
view,
input,
picker,
button{
  display: block;
  float: left;
}


.auth_button{
  width:60%;
  margin: 200rpx 20%;
}

.column{
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  justify-content: center;
}

.row{
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: center;
}

.three_line{
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}

.one_row{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.avatarUrl{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.nickName{
  font-size: 33rpx;
  font-weight: 500;
  width: 100%;
  line-height:40rpx;
  margin: 20rpx 0;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.nickName:active{
  transform: scale(0.9);
  opacity: 0.7;
}
.nickName_small{
  font-weight: 500;
  width:400rpx;
  margin:5rpx 10rpx;
  font-size: 30rpx;
}

.select{
  color: white;
  font-size: 33rpx;
  font-weight: 500;
}

.copy{
  font-size: 22rpx;
  margin-top: 3rpx;
  text-decoration: underline;
  float: right;
  margin-right: 8rpx;
}

.follow{
  border: 1rpx solid white;
  padding:10rpx 20rpx;
  border-radius: 10rpx;
  float: right;
  margin:15rpx;
  font-size: 22rpx;
  margin-right: 0rpx;
}

.gray{
  color: darkgrey;
}

.hover-class{
  transform: scale(0.9);
  opacity: 0.7;
}

.red_dot{
  line-height: 35rpx;
  width: 35rpx;
  background-color: red;
  border-radius: 35rpx;
  font-size: 22rpx;
  color: white;
  text-align: center;
}