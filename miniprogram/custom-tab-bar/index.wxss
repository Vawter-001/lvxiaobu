
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background:#171824;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.205);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tab-bar-item image {
  width:50rpx;
  height:50rpx;
}
.tab-bar-item view {
  font-size:20rpx;
}

.add{
  margin-top: -40rpx;
}
.add image{
  width: 80rpx;
  height: 80rpx;
  padding:4rpx;
  border-radius:80rpx;
  z-index: 1000;
}
.add view {
  font-size: 28rpx;
}