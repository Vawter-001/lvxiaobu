@import '../app.wxss';

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background:#171824;
  display: flex;
  justify-content: space-around;
  flex-flow: row nowrap;
  align-items: center;
  
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.205);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  width: 100rpx;
  justify-content: center;
}
.tab-bar-item image{
  width:50rpx;
  height:50rpx;
  margin-left: 25rpx;
}
.tab-bar-item view {
  width: 100rpx;
  font-size:20rpx;
  text-align: center;
}

.add{
  margin-top: -40rpx;
}
.add image{
  width: 80rpx;
  height: 80rpx;
  margin-left: 8rpx;
  padding:4rpx;
  border-radius:80rpx;
  z-index: 1000;
}
.add view {
  font-size: 28rpx;
}

.red_dot{
  float: right;
  margin-top: -90rpx;
  margin-right: 10rpx;
}