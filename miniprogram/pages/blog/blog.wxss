/* miniprogram/pages/blog/blog.wxss */
/* 顶部栏目 */
.header{
  width:700rpx;
  position:absolute;
  top: 10rpx;
  left: 25rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
  flex-direction: row;
  z-index: 1;
}

/* navbar */
.header>.top_nav{
  float: left;
  width:540rpx;
  padding: 0 10rpx;
  white-space: nowrap;
  height: 50rpx;
  border-right: 1rpx solid white;
  border-left: 1rpx solid white;
}
.top_nav text{
  display:inline-block;
  line-height: 50rpx;
  width:120rpx;
  text-align: center;
  float: none;
}

.header>.write{
  width: 35rpx;
  height: 35rpx;
}

.blog{
  width: 700rpx;
  padding:35rpx 25rpx 0rpx 25rpx;
}
.blog>view{
  width:700rpx;
}

.user_info>text:nth-child(2){
  border: 1rpx solid white;
  padding:10rpx 20rpx;
  border-radius: 10rpx;
  float: right;
  margin:15rpx;
  font-size: 22rpx;
}
.user_info>text:nth-child(4){
  font-size: 20rpx;
  color: gainsboro;
  width: 400rpx;
  margin:5rpx 10rpx;
}

.content{
  padding-left:5rpx;
  height:113rpx;
  line-height:38rpx;
  padding-bottom:35rpx;
  border-bottom: 2rpx solid #2b2b2b;
}
.three_line{
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}