page{
  height: 100%;
  background: rgb(237,237,237);
  background-color:#171824;
  color:white;
}

.chatroom {
  width: 100%;
  height: 100%;
}

.header {
  background: white;
  border-bottom: 1px solid #ddd;
  font-size: 35rpx;
  font-weight: 500;
  width: 100%;
  height: 7%;
  float: left;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.header>text{
  width: 100%;
  text-align: center;
}

.chatroom .body {
  flex: 2;
  display: flex;
  flex-direction: column;
  background: #171824;
  padding-bottom: 16rpx;
  float: left;
}

.body .message {
  display: flex;
  flex-direction: row;
  position: relative;
  margin: 12rpx 0;
  width: 500rpx;
}

.body .message.message__self {
  flex-direction: row-reverse;
  float: right;
}

.body .message .avatar {
  position: relative;
  top: 5rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 5rpx;
  margin: 15rpx;
}

.body .message .main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.body .message.message__self .main {
  align-items: flex-end;
}

.body .message .nickname {
  font-size: 24rpx;
}

.body .message .text-content {
  border: 1px solid transparent;
  border-radius: 3px;
  background-color: #2A2B33;
  margin: 2px 0 0 0;
  padding: 4px 10px;
  font-size: 30rpx;
  display: inline-block;
}

.body .message.message__self .text-content {
  background-color: #2D3344;
}

.body .message .text-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  max-width: 80%;
}

.body .message.message__self .text-wrapper .loading{
  font-size: 16rpx;
  margin-right: 18rpx;
}

.body .message .image-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.body .message .image-content {
  max-width: 400rpx;
  max-height: 240rpx;
}

.body .message.message__self .image-wrapper .loading {
  font-size: 20rpx;
  margin-right: 18rpx;
}



.footer {
  float: left;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-top: 2px solid #2b2b2b;
  font-size: 10rpx;
  height:80rpx;
  width: 750rpx;
}
.text-input {
  font-size: 24rpx;
  border: 1px solid transparent;
  border-radius: 5px;
  padding: 5px 15px;
  margin: 0 10px 0 5px;
  background: #2A2B33;
  width: 580rpx;
}
.btn-send-image {
  width: 50rpx;
  height: 50rpx;
  align-self: center;
}
.send{
  width:80rpx;
  padding:0;
  font-size: 24rpx;
  height:60rpx;
  line-height:60rpx;
}